<patterns>
	<pattern name="CboParticipantTypes">
		<source>
			<![CDATA[
				<OPTION value=0>Todos</OPTION>¬
				<OPTION value=1>Usuarios</OPTION>¬
				<OPTION value=2>Grupos de trabajo o roles</OPTION>¬
				<OPTION value=3>Organizaciones</OPTION>¬
				<OPTION value=4>Sistemas</OPTION>¬
			]]>
		</source>
	</pattern>
	<pattern name="ToDoQuickBarRow">
		<source>
			<![CDATA[
				<TR><TD><img align=absmiddle src='/empiria/images/workflow/<@TASK_TYPE_ICON@>'>
					<a href='/empiria/workflow/inboxes/inbox.asp?type=<@TASK_TYPE@>'>&nbsp; <b><@TASK_TYPE_COUNT@></b> <@TASK_TYPE_NAME@></a>
				</TD></TR>¬
			]]>
		</source>
	</pattern>
	<pattern name="ToDoEmptyQuickBarRow">
		<source>
			<![CDATA[
				<TR><TD>No hay asuntos pendientes <b>:)</b></TD></TR>¬
			]]>
		</source>
	</pattern> 
	<pattern name="TasksQuickBarLabelRow">
		<source>
			<![CDATA[
				<TR><TD><@LABEL@></TD></TR>¬
			]]>
		</source>
	</pattern>
	<pattern name="TasksQuickBarTasksRow">
		<source>
			<![CDATA[
				<TR><TD title='<@TASK_DESCRIPTION@>'>
					<A href='/empiria/workflow/engine/run_task_app.asp?id=<@TASKID@>'><@TASK_SHORT_NAME@></A>
				</TD></TR>¬
			]]>
		</source>
	</pattern>
</patterns>